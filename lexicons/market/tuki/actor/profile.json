{
  "lexicon": 1,
  "id": "market.tuki.actor.profile",
  "defs": {
    "main": {
      "type": "record",
      "description": "A profile representing a tuki user",
      "key": "literal:self",
      "record": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "maxGraphemes": 64,
            "maxLength": 640
          },
          "avatar": {
            "type": "blob",
            "description": "Small image to be displayed next to listings from account. AKA, 'profile picture'",
            "accept": [
              "image/png",
              "image/jpeg"
            ],
            "maxSize": 1000000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
